<div class="container">
    <div class="card card-login mx-auto my-5">
        {{#if errMsg}}
        <div id="err">{{errMsg}}</div>
        {{/if}}
    <div class="card-header">Login</div>
    
    <div class="card-body">
        <form action="/login" method="post" id="login">
            <div class="form-group">
                <label for="inputemail">Email Address</label>
                <input type="email" name="email" class="form-control" id="inputemail" aria-describedby="emailHelp" placeholder="Enter email">
            </div>

            <div class="form-group">
                <label for="exampleInputPass">password</label>
                <input type="password" name="password" class="form-control" id="exampleInputPass" placeholder="enter password">
            </div>

            <div class="form-group">
                <div class="form-check">
                    <label for="" class="form-check-label">
                        <input type="checkbox" class="form-check-input">remember password
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block login">login</button>
        </form>
        <div class="text-center">
            <a href="" class="d-block small mt-3">Register Account</a><br>
            <a href="" class="d-block small">Forgot Password</a><br>
            <a href="" class="d-block small">Home Page</a>
        </div>
    </div>
</div>
</div>