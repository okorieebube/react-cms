<div class="container">
    <h3 class="alert alert-dark p-3 text-dark text-center">All Categories</h3>

    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">

                <thead class="bg-primary text-center">
                    <tr>
                        <th>Title</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-hover bg-dark">
                    {{#each categories}}
                    <tr>
                        <td>{{title}}</td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/categories/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Edit
                            </a>
                            <form action="/admin/categories/{{_id}}">
                            <button class="btn btn-sm btn-danger" type="submit">delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-10">
            <form action="" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="enter title">
            </div>
            <button class="btn btn-outline-success btn-lg" id="create-category-button" type="submit">Create Category</button>
            </form>
        </div>
    </div>






</div>